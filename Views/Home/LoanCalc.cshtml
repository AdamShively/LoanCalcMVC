@model LoanCalc.Models.Loan

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container">
    <h1 class="mb-2"></h1>
    <div class="row">
        <div class="col">
            <form asp-controller="Home" asp-action="LoanCalc" method="post">
                <div class="form-row">
                    <div class="form-group col-12">
                        <label asp-for="Amount">Loan Amount:</label>
                        <input type="number" class="form-control" onclick="(function(el){el.value=parseFloat(el.value).toFixed(2);})(this)" onchange="(function(el){el.value=parseFloat(el.value).toFixed(2);})(this)" id="loanAmount" step="0.25" min="1000.00" max="100000000000.00" value=@Model.Amount asp-for="Amount" />
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="Term">Term:</label>
                        <input type="number" class="form-control" onclick="(function(el){el.value=parseFloat(el.value).toFixed(0);})(this)" onchange="(function(el){el.value=parseFloat(el.value).toFixed(0);})(this)" id="loanTerm" min="1" value=@Model.Term asp-for="Term" />
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="Rate">Rate:</label>
                        <input type="number" class="form-control" onclick="(function(el){el.value=parseFloat(el.value).toFixed(1);})(this)" onchange="(function(el){el.value=parseFloat(el.value).toFixed(1);})(this)" id="loanRate" min="1" step="0.1" value=@Model.Rate asp-for="Rate" />
                    </div>
                </div>
                <div class="col-12 d-flex justify-content-start mt-3">
                    <button id="btnSubmit" type="submit" class="btn btn-danger btn-lg">Check It!</button>
                </div>
            </form>
        </div>
        <div class="col">
            <div id="paymentTitle">
                <p>Your Monthly Payments</p>
            </div>
            <p id="payment">
                @Model.PaymentAmount.ToString("C")
            </p>
            <div class="row">
                <div class="col-6">
                    <label class="text-left">Total Principal</label>
                </div>
                <div class="col-6 text-right" id="totalPrincipal">
                    @Model.Amount.ToString("C")
                </div>
                <div class="col-6">
                    <label class="text-left">Total Interest</label>
                </div>
                <div class="col-6 text-right" id="totalInterest">
                    @Model.TotalInterest.ToString("C")
                </div>
                <div class="col-6">
                    <label class="text-left">Total Cost</label>
                </div>
                <div class="col-6 text-right" id="totalCost">
                    @Model.TotalCost.ToString("C")
                </div>
            </div>
        </div>
    </div>
    @if (Model.Payments.Count > 0)
    {
        <div class="row">
            <div class="container-fluid d-flex justify-content-center">
                <table id="table" class="table table-striped table-hover">
                    <thead class="text-dark">
                        <tr>
                            <th>Month</th>
                            <th>Payment</th>
                            <th>Principal</th>
                            <th>Interest</th>
                            <th>Total Interest</th>
                            <th>Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Payments)
                        {
                            <tr>
                                <td>@item.Month</td>
                                <td>@item.PaymentAmount.ToString("C")</td>
                                <td>@item.MonthlyPrincipal.ToString("C")</td>
                                <td>@item.MonthlyInterest.ToString("C")</td>
                                <td>@item.TotalInterest.ToString("C")</td>
                                <td>@item.Balance.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col">
            </div>
        </div>
    }
    <script>
        //Limit number input decimal places to two.
        $(':input[type="number"]').change(function() {
            this.value = parseFloat(this.value).toFixed(2);
        });
    </script>
</div>